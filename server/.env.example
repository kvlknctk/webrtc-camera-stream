# Sunucu Ayarları
NODE_ENV=production
SERVER_PORT=3000
WS_PORT=3001

# Domain/IP Ayarları (Cloudflare proxy olmadan kullanılacak)
SERVER_DOMAIN=your-domain.com
SERVER_IP=0.0.0.0

# WebRTC Ayarları
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# Güvenlik
JWT_SECRET=your-secret-key-here
CORS_ORIGINS=*

# Stream Ayarları
MAX_CLIENTS_PER_STREAM=50
STREAM_BITRATE=1000k
STREAM_FPS=30
STREAM_RESOLUTION=1280x720

# Redis Cache (Opsiyonel)
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Log Ayarları
LOG_LEVEL=info
LOG_FILE=/var/log/stream-server.log